<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.life.bank.palm.dao.community.mapper.CommentMapper">

    <insert id="insertSelective" parameterType="com.life.bank.palm.dao.community.pojo.CommentPO"
            useGeneratedKeys="true" keyProperty="id">
        insert into comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="postId != null">post_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="content != null">content,</if>
            <if test="likeCount != null">like_count,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="postId != null">#{postId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="content != null">#{content},</if>
            <if test="likeCount != null">#{likeCount},</if>
        </trim>
    </insert>

    <select id="selectById" resultType="com.life.bank.palm.dao.community.pojo.CommentPO">
        select * from comment
        where id = #{id} and is_delete = 0
    </select>

    <select id="selectByPostId" resultType="com.life.bank.palm.dao.community.pojo.CommentPO">
        select * from comment
        where post_id = #{postId} and is_delete = 0
        order by create_time desc
    </select>

    <select id="selectByParentId" resultType="com.life.bank.palm.dao.community.pojo.CommentPO">
        select * from comment
        where parent_id = #{parentId} and is_delete = 0
        order by create_time asc
    </select>

    <update id="updateLikeCount">
        update comment
        set like_count = #{likeCount}
        where id = #{id}
    </update>

    <update id="deleteById">
        update comment
        set is_delete = 1
        where id = #{id}
    </update>
</mapper>
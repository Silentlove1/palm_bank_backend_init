<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.life.bank.palm.dao.community.mapper.UserCollectMapper">

    <insert id="insertSelective" parameterType="com.life.bank.palm.dao.community.pojo.UserCollectPO">
        insert into user_collect
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="postId != null">post_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="postId != null">#{postId},</if>
        </trim>
    </insert>

    <select id="selectByUserIdAndPostId" resultType="com.life.bank.palm.dao.community.pojo.UserCollectPO">
        select * from user_collect
        where user_id = #{userId}
          and post_id = #{postId}
          and is_delete = 0
            limit 1
    </select>

    <select id="selectByUserId" resultType="com.life.bank.palm.dao.community.pojo.UserCollectPO">
        select * from user_collect
        where user_id = #{userId}
          and is_delete = 0
        order by create_time desc
            limit #{offset}, #{limit}
    </select>

    <update id="deleteById">
        update user_collect
        set is_delete = 1
        where id = #{id}
    </update>

    <select id="selectPostIdsByUserId" resultType="java.lang.Integer">
        select post_id from user_collect
        where user_id = #{userId}
          and is_delete = 0
        order by create_time desc
    </select>
</mapper>